---
import Header from "@/components/Header.jsx";
import Layout from "@l/Layout.astro";
import { User, db, eq } from "astro:db";
import UserProfileInfo from "@/components/UserProfileInfo.jsx";
import UserProfileImage from "@/components/UserProfileImage.jsx";
import { Follow } from "astro:db";
import WardrobeComponent from "@/components/Wardrobe";
import { Clothe } from "astro:db";
import { Wardrobe } from "astro:db";

const headerLinks = [
  { href: "/pamShare", content: "Pam Share" },
  { href: "/myWardrobe", content: "My Wardrobe" },
  { href: "/#about", content: "About Us" },
];

const sessionUser = Astro.locals.user;
let dbUser = null;
let followers = null;
let wardrobe = null;
let clothes = null;

if (sessionUser) {
  dbUser = (await db.select().from(User).where(eq(User.id, sessionUser.id))).at(
    0
  );
  if (dbUser) {
    followers = await db
      .select()
      .from(Follow)
      .where(eq(Follow.userTo, dbUser.id));
    wardrobe = (
      await db.select().from(Wardrobe).where(eq(Wardrobe.id, dbUser.wardrobeId))
    ).at(0);
    if (!wardrobe) {
      return Astro.redirect("/logIn");
    } else {
      clothes = await db
        .select()
        .from(Clothe)
        .where(eq(Clothe.wardrobeId, wardrobe.id));
    }
  }
} else {
  return Astro.redirect("/logIn");
}
---

<Layout
  title="PAME - My Profile"
  desc="Design you PAME profile and Share it with yoour Friends!!"
>
  <Header
    client:load
    headerLinks={headerLinks}
    user={sessionUser}
    show={true}
  />
  <main class="max-w-[900px] mx-auto py-5 px-10">
    <div class="flex flex-col md:grid md:grid-cols-6 gap-4">
      <aside class="col-span-2 flex flex-col items-center justify-center gap-2">
        <UserProfileImage
          client:visible
          dbUser={dbUser}
          width={180}
          editable={true}
          followers={followers}
        />
      </aside>
      <section
        class="col-span-4 flex flex-col gap-4 items-center md:items-end py-4"
      >
        <UserProfileInfo
          client:visible
          dbUser={dbUser}
          editable={true}
          userTo={null}
          followActive={null}
        />
      </section>
    </div>
    <div id="wardrobe">
      <WardrobeComponent
        client:visible
        categories={null}
        clothes={clothes}
        wardrobeId={wardrobe}
        simplified={true}
      />
    </div>
  </main>
</Layout>
